nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
  .container
    a.navbar-brand(href='/')
      img.branding
      | Textile + Node Starter
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.navbar-toggler-icon

    .collapse.navbar-collapse
      .dropdown-divider
      ul.nav.navbar-nav.mr-auto
        li.nav-item(class=(title === 'Home') ? 'active' : undefined)
          a.nav-link(href='/') Home
        if user
          li.nav-item(class=(title.startsWith('User')) ? 'active' : undefined)
            a.nav-link(href='/user') User #{user.email}
      ul.nav.navbar-nav
        if !user
          li.nav-item.dropdown(class=(title === 'Login') ? 'active' : undefined)
            a#dropdown01.nav-link.dropdown-toggle(href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Login
            .dropdown-menu
              a.dropdown-item(href='/auth/github') Login with GitHub
              a.dropdown-item(href='/auth/google') Login with Google
              a.dropdown-item(href='/auth/twitter') Login with Twitter
        else
          li.nav-item
            a.nav-link(href='/logout') Logout
